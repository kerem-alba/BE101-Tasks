@{
    var eventModel = ViewBag.Event;
}

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@eventModel.Id" />
    <div class="form-group">
        <label for="Title"> Event Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@eventModel.Title" required />
    </div>
    <div class="form-group">
        <label for="Description"> Description</label>
        <textarea class="form-control" id="Description" name="Description" required>@eventModel.Description</textarea>
    </div>
    <div>
        <label for="Date">Event Date</label>
        <input type="datetime-local" class="form-control" id="Date" name="Date" value="@eventModel.Date.ToString("yyyy-MM-ddTHH:mm")" required>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
</form>