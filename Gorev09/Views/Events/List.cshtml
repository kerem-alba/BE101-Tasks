
<h2 class="text-center">List of Events</h2>
<table class="table table-dark">
    <thead>
        <tr class="text-center">
            <th>Id</th>
            <th>Title</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="table-body">
        @foreach (var e in ViewBag.Events)
        {
            <tr class="text-center">
                <td>@e.Id</td>
                <td>@e.Title</td>
                <td>@e.Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <div class="btn-group">
                        <a href="@Url.Action("Details", "Events", new {id = e.Id})" class="btn btn-warning">Details</a>
                    </div>
                    <div class="btn-group">
                        <form asp-action="Delete" asp-controller="Events" asp-route-id="@e.Id" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


